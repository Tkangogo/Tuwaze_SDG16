   <script>
    // Tip Modal Functionality
    const tipBtn = document.querySelector(".tip-btn");
    const tipModal = document.querySelector(".tip-modal");
    const tipModalOverlay = document.querySelector(".tip-modal-overlay");
    const closeBtn = document.querySelector(".close-tip-form");

    // Open modal when tip button is clicked
    tipBtn.addEventListener("click", () => {
      tipModal.classList.add("active");
      tipModalOverlay.classList.add("active");
      document.body.style.overflow = "hidden";
    });

    // Close modal when close button is clicked
    closeBtn.addEventListener("click", (e) => {
      e.preventDefault();
      closeModal();
    });

    // Close modal when overlay is clicked
    tipModalOverlay.addEventListener("click", () => {
      closeModal();
    });

    // Close modal when escape key is pressed
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && tipModal.classList.contains("active")) {
        closeModal();
      }
    });

    function closeModal() {
      tipModal.classList.remove("active");
      tipModalOverlay.classList.remove("active");
      document.body.style.overflow = "";
    }

    // Prevent closing modal when clicking inside the form
    const tipForm = document.querySelector(".tip-form");
    tipForm.addEventListener("click", (e) => {
      e.stopPropagation();
    });

    // Handle form submission
    const tipFormElement = document.querySelector(".tip-modal form");
    tipFormElement.addEventListener("submit", (e) => {
      e.preventDefault();
      const category = document.getElementById("category").value;
      const message = document.querySelector(".tip-modal textarea").value;

      if (!category) {
        alert("Please select a category");
        return;
      }

      if (!message.trim()) {
        alert("Please describe the issue");
        return;
      }

      // Here you would normally send the data to your server
      tipFormElement.submit();

      closeModal();
    });
  </script>
